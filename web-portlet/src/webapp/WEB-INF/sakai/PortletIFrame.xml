<?xml version="1.0"?>

<registration>
        <tool
                 id="sakai.pframe"
                 title="Web Portlet"
                 description="For accessing an external website within the site.">

                <configuration name="source" value="" />
                <configuration name="height" value="600px" />

                <category name="stealth" />

                <!-- Allow this to be set -->
                <configuration name="functions.require" />
        </tool>

	<tool
			id="sakai.iframe"
			title="Web Content"
			description="For accessing an external website within the site.">

		<configuration name="source" value="" />
		<configuration name="height" value="600px" />

		<configuration name="reset.button" value="true"/>

		<category name="course" />
		<category name="project" />
        <category name="portfolio" />
		<category name="myworkspace" />

		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 
		
		<!-- Allow multiple instances of this tool within one site -->
		<configuration name="allowMultipleInstances" value="true" /> 
		
	</tool>


	<tool
			id="sakai.iframe.service"
			title="Service Information Display"
			description="For displaying information about this Service.">

		<configuration name="height" value="600px" />

		<configuration name="special" value="site" type="final" />
		<configuration name="reset.button" value="false" type="final" />

		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 
	</tool>

	<tool
			id="sakai.iframe.site"
			title="Site Information Display"
			description="For displaying Site information.">

		<configuration name="height" value="600px" />

		<configuration name="special" value="worksite" type="final" />
		<configuration name="reset.button" value="false" type="final" />

		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 
	</tool>

	<tool
			id="sakai.iframe.myworkspace"
			title="My Workspace Information Display"
			description="For displaying information about a user's My Workspace.">

		<configuration name="height" value="600px" />

		<configuration name="special" value="workspace" type="final" />
		<configuration name="reset.button" value="false" type="final" />

		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 

	</tool>

	<tool
			id="sakai.iframe.annotatedurl"
			title="Annotated Url"
			description="Displays a link with an annotation. URL and initial annotation can be set by admin, tool maintain user can change the annotation">

		<configuration name="height" value="600px" />

		<configuration name="special" value="annotatedurl" type="final" />
		<configuration name="reset.button" value="true" type="final" />
		<configuration name="desp" value="[Change this text when configuring the tool. It should give some idea of the purpose of the URL and prompt the tool maintain user to change this annotation via the tool menu if needed]" />
		<configuration name="TargetPageName" value="[Target Page Name - will be used as the label for the link to the URL]" />
		<configuration name="TargetPageUrl" value="http://sakaiproject.org/" />
		
		<!-- Allow this to be set -->
		<configuration name="functions.require" /> 
				
		<!-- Event for accessing the sakai.iframe.annotatedurl tool; remove property to remove logging of event -->
		<configuration name="webcontent.read" value="webcontent.read.annotatedurl" /> 
		
		<!-- Event for modifying the sakai.iframe.annotatedurl tool configuration; remove property to remove logging of event -->
		<configuration name="webcontent.revise" value="webcontent.revise.annotatedurl" /> 
		
	</tool>

</registration>
